<div class="navbar-wagon navbar-wagon-fixed">
  <!-- Logo -->
  <% link_to config[:host], class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Text link -->
    <a href="https://www.afbois.fr" class="navbar-wagon-item navbar-wagon-link sliding-middle-out" id="home">Accueil</a>

    <!-- Profile picture and dropdown -->
    <div class="dropdown">
      <button class="dropbtn">Prestations</button>
      <div class="dropdown-content">
        <%= link_to "Production", "production.html" %>
        <%= link_to "Développement", "developpement.html" %>
        <%= link_to "Mix-Marketing", "mix-marketing.html" %>
        <%= link_to "Communication", "communication.html" %>
        <%= link_to "Etudes", "etudes.html" %>
      </div>
    </div>

    <!-- Text link -->
    <a href="/#customers" class="navbar-wagon-item navbar-wagon-link sliding-middle-out" id="customers-click">Clients & Partenaires</a>

    <!-- Text link -->
    <a href="/#work" class="navbar-wagon-item navbar-wagon-link sliding-middle-out" id="work-click">Brindilles</a>

    <!-- Text link -->
    <a href="/#contact" class="navbar-wagon-item navbar-wagon-link sliding-middle-out" id="contact-click">Contact</a>

  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="https://www.afbois.fr" >Accueil</a></li>
        <li><a href="/#work">Brindilles</a></li>
        <li><a href="/#customers">Clients & Partenaires</a></li>
        <li><a href="/#contact">Contact</a></li>
        <li class="dropdown-submenu">
          <a class="test" tabindex="-1" href="#">Prestations <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Production", "production.html" %></li>
            <li><%= link_to "Développement", "developpement.html" %></li>
            <li><%= link_to "Mix-Marketing", "mix-marketing.html" %></li>
            <li><%= link_to "Communication", "communication.html" %></li>
            <li><%= link_to "Etudes", "etudes.html" %></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</div>

<script>
$(document).ready(function(){
  $('.dropdown-submenu a.test').on("click", function(e){
    $(this).next('ul').toggle();
    e.stopPropagation();
    e.preventDefault();
  });
});
</script>
